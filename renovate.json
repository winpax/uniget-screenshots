{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "patch": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": false,
    "automergeType": "pr",
    "platformAutomerge": true
  }
}
